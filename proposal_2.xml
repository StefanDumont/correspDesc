<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
  xmlns:rng="http://relaxng.org/ns/structure/1.0"
  xmlns:ct="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
  <teiHeader>
    <fileDesc>
      <titleStmt>
        <title>Proposal for a TEI Module for Correspondence (Alternative Version)</title>
        <author>TEI Correspondence SIG</author>
      </titleStmt>
      <publicationStmt>
        <authority>TEI Correspondence SIG, correspDesc task force</authority>
        <availability>
          <licence>
            <p>CC+BY and BSD-2 licences</p>
          </licence>
        </availability>
      </publicationStmt>
      <sourceDesc>
        <p>Born digital; loosely based on DALF and WeGA customizations</p>
      </sourceDesc>
    </fileDesc>
  </teiHeader>
  <text>
    <body>
      <schemaSpec ident="correspondence" start="TEI" status="unstable">
        <moduleRef key="tei"/>
        <moduleRef key="textstructure"/>
        <moduleRef key="core"/>
        <moduleRef key="header"/>
        <moduleRef key="msdescription"/>
        <moduleRef key="namesdates"/>
        <moduleRef key="linking"/>
        <moduleRef key="textcrit"/>
        
        <moduleSpec ident="correspondence" mode="add">
          <desc versionDate="2014-01-13" xml:lang="en">Module for correspondence,
            including letters, telegrams, postcards, e-mail etc.</desc>
        </moduleSpec>
        
        <classSpec ident="model.correspDescPart" mode="add" type="model" module="correspondence">
          <desc versionDate="2014-01-13" xml:lang="en">groups together metadata
            elements for describing correspondence</desc>
        </classSpec>
        
        <elementSpec ident="correspDesc" module="correspondence" mode="add"
          ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
          <gloss versionDate="2014-01-13" xml:lang="en">correspondence
            description</gloss>
          <desc versionDate="2014-01-13" xml:lang="en">a wrapper element for metadata
            pertaining to correspondence</desc>
          <classes>
            <memberOf key="model.profileDescPart"/>
            <memberOf key="att.declarable"/>
            <memberOf key="att.canonical"/>
            <memberOf key="att.global"/>
          </classes>
          <content>
            <!-- modeled after publicationStmt -->
            <!-- with the addition of noteLike -->
            <rng:choice>
              <rng:oneOrMore>
                <rng:ref name="model.correspDescPart"/>
              </rng:oneOrMore>
              <rng:oneOrMore>
                <rng:ref name="model.pLike"/>
              </rng:oneOrMore>
            </rng:choice>
            <rng:optional>
              <rng:ref name="model.noteLike"/>
            </rng:optional>
          </content>
          <exemplum xml:lang="en">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:correspDesc>
                <ct:sender>Adelbert von Chamisso</ct:sender>
                <ct:addressee>Louis de La Foye</ct:addressee>
                <ct:placeSender>Vertus</ct:placeSender>
                <ct:placeAddressee>Caen</ct:placeAddressee>
                <ct:dateSender when="1807-01-29">29 January 1807</ct:dateSender>
                <ct:correspClass>
                  <term>lettersheet</term>
                  <term>signed personally</term>
                </ct:correspClass>
                <ct:context>
                  <ref type="prev"
                    target="http://tei.ibi.hu-berlin.de/berliner-intellektuelle/manuscript?Brief023ChamissoandeLaFoye#1"
                    >Previous letter of Adelbert von Chamisso to Louis de La Foye:
                    16 January 1807</ref>
                  <ref type="next"
                    target="http://tei.ibi.hu-berlin.de/berliner-intellektuelle/manuscript?Brief025ChamissoandeLaFoye#1"
                    >Next letter of Adelbert von Chamisso to Louis de La Foye: 07
                    May 1810</ref>
                </ct:context>
                <ct:transmission>
                  <p>Post</p>
                </ct:transmission>
              </ct:correspDesc>
            </egXML>
          </exemplum>
        </elementSpec>
        
        <!-- if participant is to be a generic element, 
          it should be outside the correspondence module 
          and the description needs modification -->
        <elementSpec ident="participant" module="correspondence" mode="add"
          ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
          <desc versionDate="2014-09-05" xml:lang="en">contains a structured description of the place,  
            the name and the date of the sending of a message</desc>
          <classes>
            <memberOf key="att.global"/>
            <memberOf key="att.typed"/>
            <memberOf key="model.correspDescPart"/>
          </classes>
          <content>
            <rng:oneOrMore>
              <rng:choice>
                <rng:ref name="model.nameLike"/>
                <rng:ref name="model.dateLike"/>
                <rng:ref name="model.noteLike"/>
              </rng:choice>
            </rng:oneOrMore>
          </content>
          <attList>
            <attDef ident="role" mode="add" usage="rec">
              <valList type="semi">
                <valItem ident="sender">
                  <desc versionDate="2014-09-05" xml:lang="en">identifies a/the sender of the message</desc>
                </valItem>
                <valItem ident="recipient">
                  <desc versionDate="2014-09-05" xml:lang="en">identifies a/the recipient of the message</desc>
                </valItem>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        
        <elementSpec ident="transmission" module="correspondence" mode="add"
          ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
          <desc versionDate="2014-01-13" xml:lang="en">describes the method and
            transmitter of the piece of correspondence</desc>
          <classes>
            <memberOf key="att.global"/>
            <memberOf key="att.typed"/>
            <memberOf key="att.responsibility"/>
            <memberOf key="model.correspDescPart"/>
          </classes>
          <content>
            <!-- Still somehow unhappy with this content model :-( -->
            <rng:optional>
              <rng:choice>
                <rng:ref name="model.nameLike.agent"/>
                <rng:oneOrMore>
                  <rng:ref name="model.pLike"/>
                </rng:oneOrMore>
              </rng:choice>
              <rng:optional>
                <rng:ref name="model.noteLike"/>
              </rng:optional>
            </rng:optional>
          </content>
          <exemplum xml:lang="de">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:transmission>
                <p>Übermittelt per Post auf dem Landweg</p>
              </ct:transmission>
            </egXML>
          </exemplum>
          <exemplum  xml:lang="en">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:transmission>
                <persName ref="https://viaf.org/viaf/46172473/">Pheidippides</persName>
              </ct:transmission>
            </egXML>
          </exemplum>
          <exemplum  xml:lang="en">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:transmission type="internet"/>
            </egXML>
          </exemplum>
          <remarks>
            <p><gi>ct:transmission</gi> can both be used as an empty element with
              according <att>type</att> (and <att>subtype</att>) attributes or in
              a more verbose way with child element.</p>
          </remarks>
        </elementSpec>
        
        <elementSpec ident="context" mode="add" module="correspondence"
          ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
          <!-- we'd like a different name than <context> -->
          <gloss xml:lang="en" versionDate="2014-01-13">context</gloss>
          <gloss xml:lang="de" versionDate="2014-01-13">Korrespondenzstelle</gloss>
          <!-- related by sender/addressee or topics … -->
          <desc xml:lang="en" versionDate="2014-01-13">provides references to
            preceding or following correspondence related to this piece of
            correspondence</desc>
          <classes>
            <memberOf key="model.correspDescPart"/>
          </classes>
          <content>
            <rng:choice>
              <rng:zeroOrMore>
                <rng:ref name="model.ptrLike"/>
              </rng:zeroOrMore>
              <rng:zeroOrMore>
                <rng:ref name="model.pLike"/>
              </rng:zeroOrMore>
            </rng:choice>
            <rng:zeroOrMore>
              <rng:ref name="model.noteLike"/>
            </rng:zeroOrMore>
          </content>
          <exemplum xml:lang="en">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:context>
                <ptr type="next" subtype="toAuthor" target="http://tei.ibi.hu-berlin.de/berliner-intellektuelle/manuscript?Brief101VarnhagenanBoeckh"/>
                <ptr type="prev" subtype="fromAuthor" target="http://tei.ibi.hu-berlin.de/berliner-intellektuelle/manuscript?Brief103BoeckhanVarnhagen"/>
              </ct:context>
            </egXML>
          </exemplum>
          <exemplum xml:lang="en">
            <egXML xmlns="http://www.tei-c.org/ns/Examples">
              <ct:context>
                <ref target="http://weber-gesamtausgabe.de/A040962">Previous letter of Carl Maria von Weber to Caroline Brandt: December 30, 1816</ref> 
                <ref target="http://weber-gesamtausgabe.de/A041003">Next letter of Carl Maria von Weber to Caroline Brandt: January 5, 1817</ref>
              </ct:context>
            </egXML>
          </exemplum>
        </elementSpec>
        
      </schemaSpec>
    </body>
  </text>
</TEI>
