<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:id="COBEC_00014"
    xmlns:ct="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>List of ct:corresDesc elements providing a minimal set of elements and attributes (for easy data interchange)</title>
                <title type="sub">Example TEI document with the inclusion of the proposed ct:correspDesc element for the encoding of correspondence specific meta data</title>
            </titleStmt>
            <publicationStmt>
                <authority>TEI Correspondence SIG, correspDesc task force</authority>
                <availability>
                    <licence>
                        <p>CC+BY and BSD-2 licences</p>
                    </licence>
                </availability>
            </publicationStmt>
            <sourceDesc>
                <p>Born digital</p>
            </sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <listBibl>
                <ct:correspDesc corresp="example-cobec.xml#correspDesc-cobec">
                    <!-- Please compare the complete correspDesc of example-cobec.xml  -->
                    <ct:sender>PN0001</ct:sender>
                    <ct:addressee>PN0002</ct:addressee>
                    <ct:addressee>PN0003</ct:addressee>
                    <ct:addressee>PN0004</ct:addressee>
                    <ct:addressee>PN0005</ct:addressee>
                    <ct:dateSender when="1999-06-02"/>
                </ct:correspDesc>
                <ct:correspDesc corresp="example-chamisso.xml#correspDesc-chamisso">
                    <!-- Please compare the complete correspDesc of example-chamisso.xml  -->
                    <ct:sender ref="http://d-nb.info/gnd/118520040"/>
                    <ct:addressee ref="http://d-nb.info/gnd/116057203"/>
                    <ct:placeSender ref="http://d-nb.info/gnd/4835139-8"/>
                    <ct:placeAddressee ref="http://www.geonames.org/3029241"/>
                    <ct:dateSender when="1807-01-29"/>
                </ct:correspDesc>
            </listBibl>
        </body>
    </text>
</TEI>
