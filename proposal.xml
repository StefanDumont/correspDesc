            <div>
                <head>Formal Specification</head>
                <schemaSpec ident="correspondence" start="TEI sourceDesc" status="unstable">
                    <moduleRef key="tei"/>
                    <moduleRef key="textstructure"/>
                    <moduleRef key="core"/>
                    <moduleRef key="header"/>
                    <moduleRef key="msdescription"/>
                    <moduleRef key="namesdates"/>
                    <moduleRef key="linking"/>

                    <moduleSpec ident="correspondence" mode="add">
                        <desc versionDate="2014-01-13" xml:lang="en">Module for correspondence,
                            including letters, telegrams, postcards, e-mail</desc>
                    </moduleSpec>

                    <classSpec ident="model.correspDescPart" mode="add" type="model">
                        <desc versionDate="2014-01-13" xml:lang="en">groups together metadata
                            elements for describing correspondence</desc>
                    </classSpec>

                    <elementSpec ident="correspDesc" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <gloss versionDate="2014-01-13" xml:lang="en">correspondence
                            description</gloss>
                        <desc versionDate="2014-01-13" xml:lang="en">a wrapper element for metadata
                            pertaining to correspondence</desc>
                        <classes>
                            <memberOf key="model.biblLike"/>
                            <!-- need some mechanism to permit different <correspDesc> information-->
                            <!-- for different <div>s or whathaveyou; perhaps <msDesc> and-->
                            <!-- <correspDesc> should be members of model.divTop (indirectly)-->
                            <!-- or even listCorrespDesc ?! -->
                            <memberOf key="att.declarable"/>
                            <memberOf key="att.global"/>
                        </classes>
                        <content>
                            <!-- modeled after publicationStmt -->
                            <!-- with the addition of noteLike -->
                            <rng:choice>
                                <rng:oneOrMore>
                                    <rng:ref name="model.correspDescPart"/>
                                </rng:oneOrMore>
                                <rng:oneOrMore>
                                    <rng:ref name="model.pLike"/>
                                </rng:oneOrMore>
                            </rng:choice>
                            <rng:optional>
                                <rng:ref name="model.noteLike"/>
                            </rng:optional>
                        </content>
                    </elementSpec>

                    <!-- make sender and addressee declarable to allow for linking with separate places and/or dates? -->
                    <elementSpec ident="sender" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <desc versionDate="2014-01-13" xml:lang="en">contains the name or some other
                            description of the sender of a piece of correspondence</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.personal"/>
                            <!-- maybe att.editLike? -->
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!-- CIF standard -->
                                <rng:optional>
                                    <rng:text/>
                                </rng:optional>
                                <!-- Full fledged standard -->
                                <rng:group>
                                    <rng:choice>
                                        <rng:ref name="model.nameLike.agent"/>
                                        <rng:oneOrMore>
                                            <rng:ref name="model.pLike"/>
                                        </rng:oneOrMore>
                                    </rng:choice>
                                    <rng:optional>
                                        <rng:ref name="model.noteLike"/>
                                    </rng:optional>
                                </rng:group>
                            </rng:choice>
                        </content>
                    </elementSpec>

                    <elementSpec ident="addressee" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <desc versionDate="2014-01-13" xml:lang="en">contains the name or some other
                            description of the addressee of a piece of correspondence</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.personal"/>
                            <!-- maybe att.editLike? -->
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!-- CIF standard -->
                                <rng:optional>
                                    <rng:text/>
                                </rng:optional>
                                <!-- Full fledged standard -->
                                <rng:group>
                                    <rng:choice>
                                        <!-- what about model.addressLike? -->
                                        <rng:ref name="model.nameLike.agent"/>
                                        <rng:oneOrMore>
                                            <rng:ref name="model.pLike"/>
                                        </rng:oneOrMore>
                                    </rng:choice>
                                    <rng:optional>
                                        <rng:ref name="model.noteLike"/>
                                    </rng:optional>
                                </rng:group>
                            </rng:choice>
                        </content>
                        <remarks>
                            <p>the intended recipient, which may or may not be the actual
                                recipient</p>
                        </remarks>
                    </elementSpec>

                    <elementSpec ident="placeSender" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <gloss versionDate="2014-01-13" xml:lang="en">place of sender</gloss>
                        <desc versionDate="2014-01-13" xml:lang="en">contains the place where the
                            piece of correspondence was written or sent</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.personal"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!-- CIF standard -->
                                <rng:optional>
                                    <rng:text/>
                                </rng:optional>
                                <!-- Full fledged standard -->
                                <rng:group>
                                    <rng:choice>
                                        <rng:ref name="model.placeNamePart"/>
                                        <rng:oneOrMore>
                                            <rng:ref name="model.pLike"/>
                                        </rng:oneOrMore>
                                    </rng:choice>
                                    <rng:optional>
                                        <rng:ref name="model.noteLike"/>
                                    </rng:optional>
                                </rng:group>
                            </rng:choice>
                        </content>
                    </elementSpec>

                    <elementSpec ident="placeAddressee" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <gloss versionDate="2014-01-13" xml:lang="en">place of addressee</gloss>
                        <!-- ask a native -->
                        <!-- we want it to subsume all sorts of addresses -->
                        <desc versionDate="2014-01-13" xml:lang="en">contains the place of the
                            addressee or the place where the piece of correspondence was actually
                            received</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.personal"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!-- CIF standard -->
                                <rng:optional>
                                    <rng:text/>
                                </rng:optional>
                                <!-- Full fledged standard -->
                                <rng:group>
                                    <rng:choice>
                                        <rng:ref name="model.placeNamePart"/>
                                        <rng:oneOrMore>
                                            <rng:ref name="model.pLike"/>
                                        </rng:oneOrMore>
                                    </rng:choice>
                                    <rng:optional>
                                        <rng:ref name="model.noteLike"/>
                                    </rng:optional>
                                </rng:group>
                            </rng:choice>
                        </content>
                    </elementSpec>

                    <elementSpec ident="dateSender" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <gloss versionDate="2014-01-13" xml:lang="en">date of
                            writing/sending</gloss>
                        <!-- if more than one (writing, sending, whateveryouhave) date shall be encoded, use several dateSender elements! -->
                        <desc versionDate="2014-01-13" xml:lang="en">contains the date of writing or
                            sending a piece of correspondence</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.datable"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <!-- Do we need <rng:text/> here as option, as well? -->
                            <rng:optional>
                                <rng:choice>
                                    <rng:ref name="model.dateLike"/>
                                    <rng:oneOrMore>
                                        <rng:ref name="model.pLike"/>
                                    </rng:oneOrMore>
                                </rng:choice>
                                <rng:optional>
                                    <rng:ref name="model.noteLike"/>
                                </rng:optional>
                            </rng:optional>
                        </content>
                    </elementSpec>

                    <elementSpec ident="dateAddressee" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <gloss versionDate="2014-01-13" xml:lang="en">delivery date</gloss>
                        <!-- if more than one (receiving, reading, whateveryouhave) date shall be encoded, use several dateAddressee elements! -->
                        <desc versionDate="2014-01-13" xml:lang="en">contains the date of receiving
                            or reading a piece of correspondence</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="att.datable"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <!-- Do we need <rng:text/> here as option, as well? -->
                            <rng:optional>
                                <rng:choice>
                                    <rng:ref name="model.dateLike"/>
                                    <rng:oneOrMore>
                                        <rng:ref name="model.pLike"/>
                                    </rng:oneOrMore>
                                </rng:choice>
                                <rng:optional>
                                    <rng:ref name="model.noteLike"/>
                                </rng:optional>
                            </rng:optional>
                        </content>
                    </elementSpec>

                    <!-- need another name?!? -->
                    <!-- neither accMat nor additions nor bindingDesc nor textClass do fully qualify for our purposes -->
                    <elementSpec ident="correspClass" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <!-- modeled after keywords -->
                        <gloss versionDate="2014-02-14" xml:lang="en">correspondence
                            classification</gloss>
                        <desc versionDate="2014-01-13" xml:lang="en">describes the piece of
                            correspondence (e.g. letter, postcard, email), if possible according to
                            some (external) classification scheme</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!-- CIF standard -->
                                <rng:text/>
                                <!-- Full fledged standard -->
                                <rng:zeroOrMore>
                                    <rng:ref name="term"/>
                                </rng:zeroOrMore>
                                <!-- model.pLike hinzufügen -->
                            </rng:choice>
                        </content>
                        <attList>
                            <attDef ident="scheme" usage="opt" mode="add">
                                <desc>identifies the controlled vocabulary within which the set of
                                    keywords concerned is defined.</desc>
                                <datatype>
                                    <rng:ref name="data.pointer"/>
                                </datatype>
                            </attDef>
                        </attList>
                        <exemplum xml:lang="de">
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <correspClass>
                                    <term>Brief</term>
                                    <term>eigenhändig</term>
                                    <term>mit Unterschrift</term>
                                    <term>ohne Umschlag</term>
                                </correspClass>
                            </egXML>
                        </exemplum>
                        <exemplum xml:lang="en">
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <correspClass type="letter"/>
                            </egXML>
                        </exemplum>
                        <remarks>
                            <p>Information about the presence of an envelope may be captured
                                here.</p>
                            <p><gi>correspClass</gi> can both be used as an empty element with
                                according <att>type</att> (and <att>subtype</att>) attributes or in
                                a more elaborate way with several <gi>term</gi> child elements.</p>
                        </remarks>
                    </elementSpec>

                    <!-- we'd like a different name?! -->
                    <!-- respStmt is not able to cover the *method* of transmission without assigning responsibility to a person or organisation -->
                    <elementSpec ident="transmission" module="correspondence" mode="add"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <desc versionDate="2014-01-13" xml:lang="en">describes the method and
                            transmitter of the piece of correspondence</desc>
                        <classes>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed"/>
                            <memberOf key="att.responsibility"/>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <!-- Still somehow unhappy with this content model :-( -->
                            <rng:optional>
                                <rng:choice>
                                    <rng:ref name="model.nameLike.agent"/>
                                    <rng:oneOrMore>
                                        <rng:ref name="model.pLike"/>
                                    </rng:oneOrMore>
                                </rng:choice>
                                <rng:optional>
                                    <rng:ref name="model.noteLike"/>
                                </rng:optional>
                            </rng:optional>
                        </content>
                        <remarks>
                            <p><gi>transmission</gi> can both be used as an empty element with
                                according <att>type</att> (and <att>subtype</att>) attributes or in
                                a more verbose way with child element.</p>
                        </remarks>
                    </elementSpec>

                    <elementSpec ident="context" mode="add" module="correspondence"
                        ns="http://wiki.tei-c.org/index.php/SIG:Correspondence/task-force-correspDesc">
                        <!-- we'd like a different name than <context> -->
                        <gloss xml:lang="en" versionDate="2014-01-13">context</gloss>
                        <gloss xml:lang="de" versionDate="2014-01-13">Korrespondenzstelle</gloss>
                        <!-- related by sender/addressee or topics … -->
                        <desc xml:lang="en" versionDate="2014-01-13">provides references to
                            preceding or following correspondence related to this piece of
                            correspondence</desc>
                        <classes>
                            <memberOf key="model.correspDescPart"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <rng:zeroOrMore>
                                    <rng:ref name="model.ptrLike"/>
                                </rng:zeroOrMore>
                                <rng:zeroOrMore>
                                    <rng:ref name="model.pLike"/>
                                </rng:zeroOrMore>
                            </rng:choice>
                            <rng:optional>
                                <rng:ref name="model.noteLike"/>
                            </rng:optional>
                        </content>
                        <exemplum xml:lang="en">
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <context>
                                    <ptr type="next" target="http://uri.of.next.letter">Next letter
                                        of the author to the same addressee</ptr>
                                    <ptr type="prev" target="http://uri.of.previous.letter"/>
                                </context>
                            </egXML>
                        </exemplum>
                    </elementSpec>

                </schemaSpec>
            </div>
        </back>
    </text>
